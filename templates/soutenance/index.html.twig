body{
  background: rgb(226, 226, 226);
  
}


a.ss {
  position: relative;
  display: inline-block;
  padding: 10px 20px;
  color: #fff;
  text-decoration: none;
  overflow: hidden;
  transition: color 0.3s ease;
  z-index: 1;
}

a.ss::before,
a.ss::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #337ab7;
  transition: transform 0.3s ease;
  z-index: -1;
}

a.ss::before {
  top: 0;
  left: -100%;
  transform: skewX(45deg);
  transform-origin: left;
}

a.ss::after {
  top: 0;
  right: -100%;
  transform: skewX(-45deg);
  transform-origin: right;
}

a.ss:hover {
  color: #fff;
}

a.ss:hover::before,
a.ss:hover::after {
  transform: translateX(100%);
}

a{
  position: relative;
  width: 100px;
  font-size: 14px;
  color: #696969;
  display: table;
  padding: 10px;
